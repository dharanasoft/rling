<%= error_messages_for :user %>
 
<% form_for :user, :url=> password_resets_path do |f| -%>
  <p>
    Reset Password Request
  </p>
  

  <p>
    <label for="email">Email</label><br />
    <%= f.text_field :email %>
  </p>


  <p>
    <%= link_to "back", login_path %>
    <%= submit_tag 'Submit' %>
  </p>
<% end -%>
