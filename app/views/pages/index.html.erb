<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Perma link</th>
    <th>Home page</th>
    <th>Page view type</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= raw page.body %></td>
    <td><%= page.perma_link %></td>
    <td><%= page.home_page %></td>
    <td><%= page.page_view_type %></td>
   
    <td><%= link_to image_tag("show.png",:class=>"image_link"), page %></td>
    <td><%= link_to image_tag("edit.png",:class=>"image_link"), edit_page_path(page) %></td>
    <td><%= link_to image_tag("delete.png",:class=>"image_link"), page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

