<h1>Listing Category Views</h1>
<% unless @pages.empty? %>
<table>
  <tr>
    <th>Title</th>
    <th>Perma link</th>
    <th>Home page</th>
    <th>View Type</th>
    <th>View For</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.perma_link %></td>
    <td><%= page.home_page ? "Yes" : "No" %></td>
    <td><%= page.view_type %></td>
    <td><%= page.get_view_for %></td>
    <td><%= link_to "Show", :action=>"show",:id=>page %></td>
    <td><%= link_to "Edit", edit_page_path(page) %></td>
    <td><%= link_to "Destroy", {:action=>"destroy",:id=>page}, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>
<% else %>
<%= 'You do not have any views. Create one now.' %>
<% end %>
