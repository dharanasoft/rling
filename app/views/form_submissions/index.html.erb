<h1>Listing  <%= @page.title.pluralize.capitalize %> </h1>

<table>

<tr>

<% @page.form_components.each do |component_form|   %>
  <th><h4><%= component_form.component_display_name.capitalize %></h4>
</th>

 <% end %>


</tr>
<% @form_submissions.each do |form_submission| %>
  <tr>


   <%  form_submission.form_datas.each do |form_data| %>
      <td><%= get_form_data(form_data.form_component.component_type,form_data.data_value) %></td>
   <% end %>
    <% (@page.form_components.count - form_submission.form_datas.count).times do %>
        <td></td>
    <% end %>

    <td><%= link_to image_tag("edit.png",:class=>"image_link"), edit_object_form_form_submission_path(@page,form_submission) %></td>
    <td><%=link_to image_tag("delete.png",:class=>"image_link"), [@page,form_submission], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  <td><%= link_to 'Back', object_form_index_pages_path %></td>
</table>

<br />

