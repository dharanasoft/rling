<%= form_for(@permission) do |f| %>
  <% if @permission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@permission.errors.count, "error") %> prohibited this permission from being saved:</h2>

      <ul>
      <% @permission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role_id, "Role ID" %><br />
    <%= f.select(:role_id, Role.all.collect{|p|[p.role_type,p.id]}) %>
  </div>
  <div class="field">
    <%= f.label :permission_object %><br />
    <%= f.text_field :permission_object %>
  </div>
  <div class="field">
    <%= f.label :permission_type %><br />
    <%= f.select :permission_type, ["Pages","Object Forms","Object Models"]%>
  </div>
  <div class="field">
    <%= f.label :activity_code %><br />
    <%= f.text_field :activity_code %>
  </div>
  <div class="field">
    <%= f.label :activity_display_text %><br />
    <%= f.text_field :activity_display_text %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.check_box :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
