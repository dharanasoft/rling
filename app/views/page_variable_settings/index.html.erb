<h1>Listing Page variable configuration</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Default value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @page_variable_settings.each do |page_variable_setting| %>
  <tr>
    <td><%= page_variable_setting.name %></td>
    <td><%= page_variable_setting.default_value %></td>
    <td><%= link_to image_tag("show.png",:class=>"image_link"),  page_variable_setting %></td>
    <td><%= link_to image_tag("edit.png",:class=>"image_link"), edit_page_variable_setting_path(page_variable_setting) %></td>
    <td><%= link_to image_tag("delete.png",:class=>"image_link"),  page_variable_setting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

