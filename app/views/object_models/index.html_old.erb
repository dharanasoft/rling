<h1>Listing Object Models</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Perma link parent</th>
  </tr>

<% @object_models.each do |object_model| %>

  <tr>
    <td><%= object_model.name %></td>
    <td><%= raw object_model.description%></td>
    <td><%= object_model.perma_link_parent %></td>
    <td><%= link_to "Model Components",[object_model,:model_components] %></td>
    <td><%= link_to image_tag("show.png",:class=>"image_link"), object_model %></td>
    <td><%= link_to image_tag("edit.png",:class=>"image_link"), edit_object_model_path(object_model) %></td>
    <td><%=  link_to image_tag("delete.png",:class=>"image_link"),  object_model, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

